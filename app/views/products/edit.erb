<h1>Edit Product</h1>
<form method='POST' action="/products/<%=@product.id%>">
  <input type='hidden' name='_method' value='PATCH'>
  <p>Product Name:
    <% if admin? %>
      <input type='text' name='name' value="<%=@product.name%>">
    <% else %>
      <%=@product.name%>
      <input type='hidden' name='name' value="<%=@product.name%>">
    <% end %>
  </p>
  <p>Product Price(each):
    <% if admin? %>
      <input type='number' step='0.01' name='price' value="<%='%.2f' % @product.price%>">
    <% else %>
      <%=@product.price%>
      <input type='hidden' name='price' value="<%=@product.price%>">
    <% end %>
  </p>
  <p>Product Quanitity: <input type='number' name='quantity' value="<%=@product.quantity%>"></p>
  <div class='row'>
    <div class='col-md-4'><input type='submit' class="btn btn-warning" value='Update Product'></div>
    <div class='col-md-4'><a href='/products' class="btn btn-primary">Back to Inventory</a></div>
  </div>
</form>
