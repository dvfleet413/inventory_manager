<h1><%= @product.name %></h1>
<p>Price: $<%= "%.2f" % @product.price %></p>
<p>Quantity: <%= @product.quantity %></p>
<p>Total Value: $<%= "%.2f" % (@product.price * @product.quantity) %></p>
<div class='row'>
  <div class='col-md-4'><a href='/products' class="btn btn-primary">View All Inventory</a></div>
  <div class='col-md-4'><a href="/products/<%= @product.id %>/edit" class="btn btn-warning">Edit Product</a></div>
  <% if admin? %>
    <div class='col-md-4'>
      <form method='POST' action="/products/<%=@product.id%>">
        <input type='hidden' name='_method' value='DELETE'>
        <input type='submit' class="btn btn-danger" value='Delete Product'>
      </form>
    </div>
  <% end %>
</div>
